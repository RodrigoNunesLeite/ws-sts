package aplicacao;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import dominio.Pessoa;

public class Programa {

	public static void main(String[] args) {
		Pessoa p1 = new Pessoa(null, "Carlos da Silva", "carlos@gmail.com");
		Pessoa p2 = new Pessoa(null, "Nunes", "nunes@gmail.com");
		Pessoa p3 = new Pessoa(null, "Maria", "maria@gmail.com");
		
		// instanciando o entity manager, com as configuraçoes do arquivo persistence
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("exemplo-jpa");
		// aqui criamos a conexão com o banco de dados
		EntityManager em = emf.createEntityManager();
		
		System.out.println(p1);
		System.out.println(p2);
		System.out.println(p3);
		
	}

}
